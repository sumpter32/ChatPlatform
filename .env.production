# Backend Configuration
PORT=3001
NODE_ENV=production

# Database Configuration (Use your CloudPanel database details)
DB_HOST=localhost
DB_PORT=3306
DB_USER=chatplatform_user
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE
DB_NAME=chatplatform

# JWT Configuration (IMPORTANT: Change this to a random string!)
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_STRING_USE_A_PASSWORD_GENERATOR
JWT_EXPIRES_IN=7d

# Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# Open WebUI Configuration (If you have Open WebUI installed)
OPEN_WEBUI_BASE_URL=http://localhost:8080
OPEN_WEBUI_API_KEY=

# CORS Configuration
FRONTEND_URL=https://chat.wwjs.app

# Optional: WordPress Integration
WORDPRESS_URL=https://wwjs.app
WORDPRESS_API_KEY=